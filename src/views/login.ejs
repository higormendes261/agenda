<%- include('includes/head') %>
<%- include('includes/nav') %>
<%- include('includes/botaoVoltar') %>

<style>
  .container-cadastro{
    display: flex; 
    align-items: center;
}

  .container-cadastro p{
    margin-left: 25px;
  }

body{
  font-size: 22px;
}

.button-login{
    font-size: 22px;
    width: 100px;
}

</style>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-8 my-3">
      <h1 class="text-center">Entrar</h1>
      <p class="text-center lead">Faça login ou crie sua conta abaixo</p>
      <%- include('includes/messages'); %>
      <div class="row">
        <div class="col-lg my-5">
          <h4>Faça seu login</h4>
          <p>Se você já tem uma conta, faça login abaixo:</p>
          <form class="form-login" action="/login/login" method="POST">
            <input type="hidden" name="_csrf" value=<%= csrfToken %>>
            <div class="form-group">
              <label form="email">Seu e-mail</label>
              <input type="email" class="form-control" name="email">
            </div>
            <div class="form-group">
              <label for="password">Sua senha</label>
              <input type="password" class="form-control" name="password">
            </div>
            <div class="container-cadastro">
              <button type="submit" class="btn btn-primary button-login">Entrar</button> <p>Primeira vez no KnowSys? <a href="/cadastro/index">Cadastra-se aqui!</a></p>
            </div>
          </form>          
        </div>
      </div>
    </div>
    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('includes/footer') %>